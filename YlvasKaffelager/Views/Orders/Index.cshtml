@model YlvasKaffelager.ViewModels.OrderViewModel

<div class="text-center">
    <h1 class="display-4">Beställ</h1>
    <h1 class="display-6">Vi ser fram emot din order.</h1>
</div>

<form asp-action="ProcessOrder" asp-controller="Orders" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        
        <div class="col-md-6">
            <div class="mb-2">
                <label asp-for="FirstName"></label>
                <input class="form-control" type="text" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger" />
            </div>

            <div class="mb-2">
                <label asp-for="LastName"></label>
                <input class="form-control" type="text" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger" />
            </div>

            <div class="mb-2">
                <label asp-for="Email"></label>
                <input class="form-control" type="email" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="mb-2">
                <label>Produkt</label>
                <select class="form-control" asp-for="CoffeeId" asp-items="@(new SelectList(Model.CoffeeItems, "Value", "Text"))">
                    <option value="">---Välj---</option>
                </select>
                <span asp-validation-for="CoffeeId" class="text-danger" />
            </div>

            <div class="mb-2">

                <label asp-for="Amount"></label>
                <input class="form-control" type="number" asp-for="Amount" />
                <span asp-validation-for="Amount" class="text-danger" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mt-1">
                <input type="submit" name="btnSubmit" value="Beställ" class="btn btn-success" />
            </div>
        </div>

    </div>

</form>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}